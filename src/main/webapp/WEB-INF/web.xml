<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>fileman</servlet-name>
        <servlet-class>io.fileman.FilemanServletSupport</servlet-class>
        <init-param>
            <param-name>root</param-name>
            <param-value>D:\</param-value>
        </init-param>
        <init-param>
            <param-name>synthesizer</param-name>
            <param-value>io.fileman.RenderSynthesizer</param-value>
        </init-param>
        <init-param>
            <param-name>formatter</param-name>
            <param-value>io.fileman.formatter.HtmlFormatter</param-value>
        </init-param>
        <init-param>
            <param-name>fields</param-name>
            <param-value>
                name, size, time, type, etag
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileman</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>
