<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>fileman</servlet-name>
        <servlet-class>io.fileman.servlet.FilemanServletSupport</servlet-class>
        <init-param>
            <param-name>root</param-name>
            <param-value>D:/logs</param-value>
        </init-param>
        <init-param>
            <param-name>fields</param-name>
            <param-value>
                name
                size
                last-modified
                children-count
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileman</servlet-name>
        <url-pattern>/fileman/*</url-pattern>
    </servlet-mapping>

</web-app>
